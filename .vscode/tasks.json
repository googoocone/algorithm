{
  "version": "2.0.0",
  "tasks": [
      {
          "label": "build and run",
          "type": "shell",
          "command": "g++",
          "args": [
              "-g",
              "${file}",
              "-o",
              "${fileDirname}/${fileBasenameNoExtension}.exe"
          ],
          "group": {
              "kind": "build",
              "isDefault": true
          },
          "problemMatcher": ["$gcc"],
          "detail": "컴파일 명령"
      },
      {
          "label": "run",
          "type": "shell",
          "command": "${fileDirname}/${fileBasenameNoExtension}.exe",
          "group": {
              "kind": "test",
              "isDefault": true
          },
          "presentation": {
              "echo": true,
              "reveal": "always",
              "focus": false,
              "panel": "shared"
          }
      }
  ]
}
